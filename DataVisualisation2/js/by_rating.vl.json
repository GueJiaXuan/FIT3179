{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": ["10 Highest rated NBA Players in NBA 2K20"],
  "width": 400,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/JohnnyGue/FIT3179/main/DataVisualisation2/data/NBA_players_by_rating.csv"
  },
  "encoding": {
    "x": {
      "field": "rating",
      "type": "quantitative",
      "scale": {"domain": [76, 97]}
    },
    "y": {"field": "Salary", "type": "quantitative"}
  },
  "layer": [
    {
      "mark": "point",
      "encoding": {
        "color": {
          "field": "rating",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [80],
            "range": ["#F7DC6F", "#F76F6F"]
          },
          "legend": null
        },
        "tooltip": [
          {"field": "full_name", "title": "Name "},
          {"field": "Age"},
          {"field": "Salary", "title": "Salary in USD"},
          {"field": "rating", "title": "NBA 2K20 Rating"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": 0,
        "font": "arial",
        "fontSize": 10,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "full_name", "type": "nominal"},
        "color": {"value": "black"},
        "tooltip": [
          {"field": "full_name", "title": "Name "},
          {"field": "Age"},
          {"field": "Salary", "title": "Salary in USD"},
          {"field": "rating", "title": "NBA 2K20 Rating"}
        ]
      }
    }
  ]
}
